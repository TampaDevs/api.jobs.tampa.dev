<html>
<head>
  <meta charset="utf-8">
{{> analytics/widget this }}
{{> style/widget this }}

</head>
<body>
{{#if jobs.length}}
  <table>
      <thead>
          <tr>
            <th id="table-header-title">Title</th>
            <th id="table-header-company">Company</th>
            <th id="table-header-arrangement">Arrangement</th>
            <th id="table-header-location">Location</th>
            <th id="table-header-link">Link</th>
          </tr>
      </thead>
      <tbody>
        {{#each jobs}}
          <tr class="type-{{this.attributes.type}}">
            <td class="table-entry-title">{{capitalize this.attributes.title}}</td>
            <td class="table-entry-company">{{this.attributes.company.name}}</td>
            <td class="table-entry-arrangement">{{capitalize this.attributes.arrangement}}</td>
            <td>{{capitalize this.attributes.location}}</td>
            <td class="table-entry-link"><a href="{{add_utm this.links.self}}">Apply Now</a></td>
          </tr>
        {{/each}}
      </tbody>
  </table>
{{else}}
  <h4 id="no-positions-message">No positions available.</h4>
{{/if}}
  <p id="powered-by"><a href="https://www.tampadevs.com/">Tampa Devs</a> Jobs Widget - Powered by <a href="https://github.com/TampaDevs/api.jobs.tampa.devs">Cloudflare</a> & <a href="https://jobs.tampa.dev/">Job Boardly</a></p>
</body>
</html>